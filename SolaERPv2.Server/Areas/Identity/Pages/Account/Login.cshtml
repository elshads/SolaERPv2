@page
@model LoginModel

@{
   Layout = "~/Areas/Identity/Pages/Shared/_IdentityLayoutLinks.cshtml";
}


    <main class="main" id="top">

      <div class="container-fluid">

        <div class="row min-vh-100 flex-center g-0">

          <div class="col-lg-8 col-xxl-5  position-relative">


                <div class="d-flex justify-content-center mb-2">
                    <img class="me-2" src="/img/apertechlogo.png" alt="" width="180">
                </div>

              <img class="bg-auth-circle-shape" src="~/soladesign/assets/img/icons/spot-illustrations/bg-shape.png" alt="" width="250"><img class="bg-auth-circle-shape-2" src="~/soladesign/assets/img/icons/spot-illustrations/shape-1.png" alt="" width="150">
            <div class="card overflow-hidden z-index-1">
              <div class="card-body p-0">
                <div class="row g-0 h-100">
                  <div class="col-md-5 text-center bg-card-gradient">
                    <div class="position-relative p-4 pt-md-5 pb-md-7 light">
                      <div class="bg-holder bg-auth-card-shape" style="background-image:url(/soladesign/assets/img/icons/spot-illustrations/half-circle.png);"></div>
                      <div class="z-index-1 position-relative">
                        <h2 class="link-light mb-4 font-sans-serif fs-4 d-inline-block fw-bolder">SolaSoft</h2>
                        <br /><br /><br />
                        <p class="opacity-75 text-white">We do not promise, We make things Possible!</p>
                      </div>
                    </div>
                    <div class="mt-3 mb-4 mt-md-4 mb-md-5 light">
                      <p class="text-white">Send verification code to<br>
                          <a class="text-decoration-underline link-light" asp-page="./ResendEmailConfirmation">email</a>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-7 d-flex flex-center">
                    <div class="p-4 p-md-5 flex-grow-1">
                      <div class="row flex-between-center">
                        <div class="col-auto">
                          <h3>Account Login</h3>
                        </div>
                      </div>
                    
                      
                      <form id="account" method="post">

                        <hr />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                    
                        <div class="mb-3">
                          <div class="d-flex justify-content-between"><label asp-for="Input.Password" class="form-label"></label></div>
                          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                          <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>


                        <div class="row flex-between-center">
                          <div class="col-auto">
                            <div class="form-check mb-0">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                             </div>
                          </div>
                           
                          <div class="col-auto"><a class="fs--1" asp-page="./ForgotPassword">Forgot Password?</a></div>
                        </div>
                           
                        <div class="mb-3"><button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit" id="login-submit">Log in</button></div>
                      </form>
                     
                      
                      <div class="position-relative mt-4">
                        <hr class="bg-300" />
                           <div class="divider-content-center">or don't have an account?</div>
                      </div>
                      <div class="row g-2 mt-2">
                        <div class="col-sm-6"><a class="btn btn-outline-google-plus btn-sm d-block w-100" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register as a company user</a></div>
                        <div class="col-sm-6"><a class="btn btn-outline-facebook btn-sm d-block w-100" asp-page="./RegisterSupplier" asp-route-returnUrl="@Model.ReturnUrl"> Register as supplier</a></div>
                      </div>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>


